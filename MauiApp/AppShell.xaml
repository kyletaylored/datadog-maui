<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DatadogMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:DatadogMauiApp.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate pages:DashboardPage}"
            Icon="home.png" />

        <ShellContent
            Title="Web Portal"
            ContentTemplate="{DataTemplate pages:WebPortalPage}"
            Icon="web.png" />
    </TabBar>

</Shell>
