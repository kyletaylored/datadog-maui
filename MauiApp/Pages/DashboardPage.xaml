<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatadogMauiApp.Pages.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25">

            <Label
                Text="Submit Data"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                Text="Enter your session information"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="Gray" />

            <Frame
                Padding="20"
                CornerRadius="10"
                HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Session Name" FontAttributes="Bold" />
                    <Entry
                        x:Name="SessionNameEntry"
                        Placeholder="Enter session name"
                        Text="" />

                    <Label Text="Notes" FontAttributes="Bold" />
                    <Editor
                        x:Name="NotesEditor"
                        Placeholder="Enter notes"
                        HeightRequest="100"
                        Text="" />

                    <Label Text="Numeric Value" FontAttributes="Bold" />
                    <Entry
                        x:Name="NumericValueEntry"
                        Placeholder="Enter a number"
                        Keyboard="Numeric"
                        Text="" />

                    <Button
                        x:Name="SubmitButton"
                        Text="Submit"
                        Clicked="OnSubmitClicked"
                        HorizontalOptions="Fill"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        Margin="0,20,0,0" />

                </VerticalStackLayout>
            </Frame>

            <Label
                x:Name="StatusLabel"
                Text=""
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Green" />

            <!-- Test Crash Button (for testing dSYM crash reporting) -->
            <Frame
                Padding="20"
                CornerRadius="10"
                HasShadow="True"
                BackgroundColor="#FFF3CD"
                BorderColor="#856404">

                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="⚠️ Crash Testing"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#856404"
                        HorizontalOptions="Center" />

                    <Label
                        Text="Use this to test crash reporting and dSYM symbolication"
                        FontSize="12"
                        TextColor="#856404"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center" />

                    <Button
                        x:Name="TestCrashButton"
                        Text="Test Crash (iOS dSYM)"
                        Clicked="OnTestCrashClicked"
                        HorizontalOptions="Fill"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
